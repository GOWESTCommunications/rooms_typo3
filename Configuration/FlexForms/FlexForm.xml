					<settings.room_code>
						<TCEforms>
							<label>Room-Code</label>
							<description></description>
							<displayCond>FIELD:component:=:room</displayCond>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<items></items>
								<itemsProcFunc>GoWest\Rooms\Utility\FlexFormHelper->getRooms</itemsProcFunc>
							</config>
						</TCEforms>
					</settings.room_code> 
					<settings.package_code>
						<TCEforms>
							<label>Package-Code</label>
							<description></description>
							<displayCond>FIELD:component:=:package</displayCond>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<items></items>
								<itemsProcFunc>GoWest\Rooms\Utility\FlexFormHelper->getPackages</itemsProcFunc>
							</config>
						</TCEforms>
					</settings.package_code>
					<settings.service_code>
						<TCEforms>
							<label>Service  Code</label>
							<description></description>
							<displayCond>FIELD:component:=:service</displayCond>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<items></items>
								<itemsProcFunc>GoWest\Rooms\Utility\FlexFormHelper->getServices</itemsProcFunc>
